{ {% load static %}
  "name": "Codex",
  "short_name": "Codex",
  "description": "Comic book reader",
  "scope": "{{ script_prefix }}",
  "start_url" : "{{ script_prefix }}",
   "icons": [
    {
      "src": "{% static 'img/favicon.svg' %}",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "{% static 'img/favicon-512.webp' %}",
      "sizes": "512x512",
      "type": "image/webp",
      "purpose": "any"
    }
  ],
  "display": "standalone",
  "lang": "en-US"
{% comment %}
  "dir": "auto",
  "orientation": "any",
  "background_color": "#000000",
  "theme_color": "#cc7b19",
  "status_bar": "default",
{% endcomment %}
}
