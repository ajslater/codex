{ {% load static %}
  "name": "Codex",
  "short_name": "Codex",
  "description": "Comic book reader",
  "scope": "{{ script_prefix }}",
  "start_url" : "{{ script_prefix }}",
  "icons": [
    {
      "src": "{% static 'img/favicon.svg' %}",
      "sizes": "any 192x192 512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "{% static 'img/manifest-icon-192.maskable.webp' %}",
      "sizes": "192x192",
      "type": "image/webp",
      "purpose": "maskable"
    },
    {
      "src": "{% static 'img/manifest-icon-512.maskable.webp' %}",
      "sizes": "512x512",
      "type": "image/webp",
      "purpose": "maskable"
    }
  ],
  "display": "standalone",
  "lang": "en-US",
  "background_color": "#272727",
  "theme_color": "#cc7b19",
  "dir": "auto",
  "orientation": "any",
  "status_bar": "default"
}
