<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
{% load static %}
{% load tz %}
<feed 
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:opds="{{opds_ns}}"
  xmlns:dc="http://purl.org/dc/terms/"
  xmlns:thr="http://purl.org/syndication/thread/1.0"
  xmlns:opensearch="http://a9.com/-/spec/opensearch/1.1/"
  xmlns:pse="http://vaemendis.net/opds-pse/ns"
  >
<id>{{ id }}</id>
<icon>{% static 'img/logo-32.webp' %}</icon>
<title>{{ title }}</title>
<author>
  <name>Codex</name>
  <uri>https://github.com/ajslater/codex</uri>
</author>
<updated>{{ updated }}</updated>
{% for link in links %}
<link 
  {% if link.title %}
    title="{{ link.title }}"
  {% endif %}
  rel="{{ link.rel }}"
  href="{{ link.href }}"
  type="{{ link.type }}"
  {% if link.facet_group %}
    opds:facetGroup="{{ link.facet_group }}"
  {% endif %}
  {% if link.facet_active %}
      opds:activeFacet="true"
  {% endif %}
  {% if link.thr_count %}
    thr:count="{{ link.thr_count }}"
  {% endif %}
  />
{% endfor %}
{% for entry in entries %}
<entry>
  <id>{{ entry.id }}</id>
  <title>{{ entry.title }}</title>
  {% for link in entry.links %}
    <link 
      rel="{{link.rel}}" 
      href="{{ link.href }}" 
      type="{{ link.type }}"
      {% if link.thr_count %}
        thr:count="{{ link.thr_count }}"
      {% endif %}
      {% if link.length %}
        length="{{ link.length }}"
      {% endif %}
      {% if link.pse_count %}
        pse:count="{{ link.pse_count }}"
      {% endif %}
      {% if link.pse_last_read %}
        pse:last_read="{{ link.pse_last_read }}"
      {% endif %}
      />
  {% endfor %}
  {% if entry.issued %}
    <dc:issued>{{ entry.issued }}</dc:issued>
  {% endif %}
  {% if entry.updated %}
    <updated>{{ entry.updated }}</updated>
  {% endif %}
  {% if entry.summary %}
    <summary type="text">{{ entry.summary }}</summary>
  {% endif %}
</entry>
{% endfor %}
</feed>
